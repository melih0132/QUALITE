<Window x:Class="WpfCalculatriveV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculatriveV2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,2,0">
        <StackPanel HorizontalAlignment="Center" Margin="50,146,52,0" Orientation="Horizontal">
            <Button x:Name="ButtonAddition" Content="+" VerticalAlignment="Top" Width="23" Click="ButtonAddition_Click"/>
            <Button x:Name="ButtonSoustraction" Margin="10,0,0,0"  Content="-" VerticalAlignment="Top" Width="23" Click="ButtonSoustraction_Click"/>
            <Button x:Name="ButtonMultiplication" Margin="10,0,0,0" Content="*" VerticalAlignment="Top" Width="23" Click="ButtonMultiplication_Click"/>
            <Button x:Name="ButtonDivision" Margin="10,0,0,0" Content="/" VerticalAlignment="Top" Width="23" Click="ButtonDivision_Click"/>
            <Button x:Name="ButtonFactorielle" Margin="10,0,0,0" Content="!" VerticalAlignment="Top" Width="23" Click="ButtonFactorielle_Click"/>
            <Button x:Name="ButtonMoyenne" Margin="10,0,0,0" Content="Moy" VerticalAlignment="Top" Width="35" Click="ButtonMoyenne_Click"/>
        </StackPanel>
        <TextBox HorizontalAlignment="Center" Height="23" Margin="0,40,4,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Nb1, Mode=OneWayToSource}"/>
        <TextBox HorizontalAlignment="Center" Height="23" Margin="0,88,4,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Nb2, Mode=OneWayToSource}"/>
        <TextBox HorizontalAlignment="Center" Height="23" IsReadOnly="True" Margin="0,196,4,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"  Text="{Binding Resultat, Mode=OneWay}"/>
    </Grid>
</Window>
