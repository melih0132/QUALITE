<Window
    x:Class="WpfVirement.RechercheVirement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfVirement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RechercheVirement"
    Width="800"
    Height="450"
    Background="White"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,10,0,0">
            <Label
                Content="Compte"
                FontSize="14"
                FontWeight="Bold" />
            <ComboBox
                Width="300"
                VerticalAlignment="Center"
                DisplayMemberPath="IdCompte"
                ItemsSource="{Binding Comptes}"
                SelectedItem="{Binding Compte}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <Label
                Content="Date de l'opération"
                FontSize="14"
                FontWeight="Bold" />
            <DatePicker
                Width="300"
                VerticalAlignment="Center"
                SelectedDate="{Binding SelectedDate}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,10"
            HorizontalAlignment="Center">
            <Button
                x:Name="BtRechercher"
                Width="760"
                Height="40"
                Background="#6A1B9A"
                Content="Rechercher"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White" Click="BtRechercher_Click" />
        </StackPanel>
        <DataGrid
            x:Name="DataGridOperations"
            Grid.Row="2"
            Margin="0,70,0,0"
            AlternatingRowBackground="Gainsboro"
            AlternationCount="2"
            AutoGenerateColumns="False"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CanUserResizeRows="False"
            CanUserSortColumns="True"
            ItemsSource="{Binding Virements}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding IdTransacation}"
                    Header="N° Transaction"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding DateTransacation, StringFormat=\{0:dd/MM/yyyy\}}"
                    Header="Date transaction"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding IdCompteDebit}"
                    Header="Compte Débit"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding IdCompteCredit}"
                    Header="Compte Crédit"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding Montant}"
                    Header="Montant"
                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
