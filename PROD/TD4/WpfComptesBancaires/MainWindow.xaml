<Window
    x:Class="WpfComptesBancaires.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Retrait/Dépôt"
    Width="800"
    Height="450"
    Background="{DynamicResource MaterialDesignPaper}"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="20,20,0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="1"
            Margin="20,30,20,0"
            VerticalAlignment="Top">
            <StackPanel Margin="0,10" Orientation="Horizontal">
                <Label
                    Width="150"
                    VerticalAlignment="Center"
                    Content="Type d'opération"
                    FontSize="14" FontWeight="Bold" />
                <ComboBox
                    Width="250"
                    Margin="280,0,0,0"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding Operations}"
                    SelectedItem="{Binding Operation}"
                    >
                    
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="0,10" Orientation="Horizontal">
                <Label
                    Width="150"
                    VerticalAlignment="Center"
                    Content="Compte"
                    FontSize="14" Margin="0,50,0,0" FontWeight="Bold" />
                <ComboBox
                    Width="250"
                    Margin="280,50,0,0"
                    ItemsSource="{Binding Comptes}"
                    SelectedItem="{Binding Compte}"
                    DisplayMemberPath="IdCompte"
                    VerticalAlignment="Center">
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="0,10" Orientation="Horizontal">
                <Label
                    Width="150"
                    VerticalAlignment="Center"
                    Content="Montant"
                    FontSize="14" Margin="0,50,0,0" FontWeight="Bold" />
                <TextBox
                    Text="{Binding Resultat}"
                    Width="250"
                    Margin="280,50,0,0"
                    VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>
        
        <StackPanel
            Grid.Row="2"
            Margin="0,20"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button x:Name="btValider"
                Width="260"
                Height="27"
                Margin="10"
 
                Content="Valider"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White" Click="btValider_Click" />
            <Button x:Name="btAnnuler"
                Width="285"
                Height="30"
                Margin="10"
         
                Content="Annuler"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White" Click="btAnnuler_Click" />
        </StackPanel>
    </Grid>
</Window>
