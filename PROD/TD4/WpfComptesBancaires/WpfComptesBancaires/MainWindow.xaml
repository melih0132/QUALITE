<Window
    x:Class="WpfComptesBancaires.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gestion de Compte"
    Width="525"
    Height="350"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Compte :" />
        <ComboBox
            x:Name="comboComptes"
            Grid.Row="0"
            Grid.Column="1"
            Width="200"
            Height="30"
            Margin="10"
            DisplayMemberPath="IdCompte"
            ItemsSource="{Binding Comptes}"
            ToolTip="Sélectionnez un compte à gérer." />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Opération :" />
        <ComboBox
            x:Name="comboOperation"
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Height="30"
            Margin="10"
            ItemsSource="{Binding OperationTypes}"
            ToolTip="Sélectionnez une opération à effectuer." />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Si Virement :" />
        <ComboBox
            x:Name="comboCompteDestinataire"
            Grid.Row="2"
            Grid.Column="1"
            Width="200"
            Height="30"
            Margin="10"
            ItemsSource="{Binding Comptes}"
            ToolTip="Sélectionnez une opération à effectuer." />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Montant :" />
        <TextBox
            x:Name="textMontant"
            Grid.Row="3"
            Grid.Column="1"
            Width="200"
            Height="30"
            Margin="10"
            Text=""
            TextWrapping="Wrap"
            ToolTip="Saisissez le montant de l'opération." />

        <Button
            x:Name="boutonValider"
            Grid.Row="4"
            Grid.Column="1"
            Width="150"
            Height="30"
            Margin="10px"
            VerticalAlignment="Center"
            Click="boutonValider_Click"
            Content="Valider"
            ToolTip="Cliquez pour valider l'opération." />
    </Grid>
</Window>