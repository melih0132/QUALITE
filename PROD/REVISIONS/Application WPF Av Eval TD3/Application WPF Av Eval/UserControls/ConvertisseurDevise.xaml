<UserControl
    x:Class="Application_WPF_Av_Eval.UserControls.ConvertisseurDevise"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Application_WPF_Av_Eval.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
                Text="€ -&gt; Devise" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center" Style="{DynamicResource MaterialDesignTitleTextBlock}"  Text="Montant Euro"/>
            <TextBox
                x:Name="MontantEuroTextBox"
                Width="150"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Style="{DynamicResource MaterialDesignTextBox}" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                Style="{DynamicResource MaterialDesignTitleTextBlock}"
                Text="Devise" />
            <ComboBox
                x:Name="DeviseComboBox"
                Width="150"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Style="{DynamicResource MaterialDesignComboBox}" />
        </StackPanel>
        <Button
            x:Name="Convertir_Button"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Convertir"
            Style="{DynamicResource MaterialDesignRaisedDarkButton}" 
            Click="Convertir_Click" Cursor="Hand" />
        <StackPanel Grid.Row="4" Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center" Style="{DynamicResource MaterialDesignTitleTextBlock}"  Text="Resultat"/>
            <TextBox
                x:Name="ResultatTextBox"
                Width="150"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                IsReadOnly="True"
                Style="{DynamicResource MaterialDesignTextBox}" />
        </StackPanel>
    </Grid>

</UserControl>
