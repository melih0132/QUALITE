<Window
    x:Class="WpfCalculatrice.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfCalculatrice"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Calculatrice"
    Width="500"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Width="200" Margin="0,0,2,0">
        <TextBox
            Height="30"
            Margin="0,80,0,0"
            Text="{Binding Nb1}" />
        <TextBox
            Height="30"
            Margin="0,30,0,0"
            Text="{Binding Nb2}" />
        <StackPanel
            Height="30"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="butPlus"
                Width="30"
                Height="30"
                Margin="0,0,0,0"
                Click="butPlus_Click">
                +
            </Button>
            <Button
                x:Name="butMoins"
                Width="30"
                Height="30"
                Margin="10,0,0,0"
                Click="butMoins_Click">
                -
            </Button>
            <Button
                x:Name="butFact"
                Width="30"
                Height="30"
                Margin="10,0,0,0"
                Click="butFact_Click">
                !
            </Button>
            <Button
                x:Name="butMultiplie"
                Width="30"
                Height="30"
                Margin="10,0,0,0"
                Click="butMultiplie_Click">
                *
            </Button>
            <Button
                x:Name="butDivise"
                Width="30"
                Height="30"
                Margin="10,0,0,0"
                Click="butDivise_Click">
                /
            </Button>
        </StackPanel>
        <TextBox
            Height="30"
            Margin="0,30,0,0"
            Text="{Binding Resultat}" />
    </StackPanel>
</Window>