<UserControl
    x:Class="TD3.UserControls.GestionDevises"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  En-tête  -->
            <RowDefinition Height="*" />
            <!--  Liste avec défilement  -->
            <RowDefinition Height="Auto" />
            <!--  Boutons en bas  -->
        </Grid.RowDefinitions>

        <!--  En-tête  -->
        <StackPanel
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                FontWeight="Bold"
                Text="Devises" />
        </StackPanel>

        <!--  Liste défilable  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="10"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <ListView
                x:Name="DeviseListView"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            Margin="5"
                            HorizontalAlignment="Stretch"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="150"
                                VerticalAlignment="Center"
                                Text="{Binding NomDevise}" />
                            <TextBox
                                Width="100"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Text="{Binding Taux}" />
                            <Button
                                Width="30"
                                Height="30"
                                Margin="5,0,0,0"
                                Background="Purple"
                                Click="SupprimerDevise_Click"
                                Content="X"
                                Foreground="White" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!--  Boutons et champs de saisie  -->
        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Vertical">
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBox
                    x:Name="NomDeviseTextBox"
                    Width="150"
                    Height="30"
                    Margin="0,0,10,0" />
                <TextBox
                    x:Name="TauxTextBox"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Width="150"
                    Height="40"
                    Background="Purple"
                    Click="AjouterDevise_Click"
                    Content="Ajouter une devise"
                    Foreground="White" />
                <Button
                    Width="220"
                    Height="40"
                    Margin="10,0,0,0"
                    Background="Purple"
                    Click="MettreAJourJSON_Click"
                    Content="Mettre à jour le fichier JSON"
                    Foreground="White" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
